<% if user_signed_in? %>
	<% if @room.favorite_user(current_user.id) %>
		<%= link_to room_favorite_path(@room, @room.favorite_user(current_user.id)), method: :delete, class: 'full-heart', remote: true do %>
		<div class="showpage-room-favorite-btn">
			<i class="fa fa-heart-o"></i>
			<span>保存</span>
		</div>
		<% end %>
	<% else %>
		<%= link_to room_favorites_path(@room), method: :post, class: 'empty-heart', remote: true do %>
		<div class="showpage-room-favorite-btn">
			<i class="fa fa-heart"></i>
			<span>保存済み</span>
		</div>
		<% end %>
	<% end %>
<% end %>
