<!doctype html>
<html>
  <head>
    <title>Airbnb</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <header class="header">
    <nav class="navbar fixed-top navbar-white bg-white navbar-style">
      <h1 class="text-style">Airbnb</h1>
      <ul class="nav justify-content-end">
        <li class="nav-item nav-item-style">
          <%= link_to 'ルーム登録', "/rooms", method: :post %>
        </li>
        <li class="nav-item nav-item-style">
          <%= link_to 'ホストをはじめる', new_room_path, method: :get %>
        <li class="nav-item nav-item-style">
          <%= link_to 'アカウント作成', "/" %>
        </li>
        <% if user_signed_in? %>
        <li class="nav-item nav-item-style">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
        <% else %>
        <li class="nav-item nav-item-style">
          <%= link_to "ログイン", new_user_session_path, method: :post %>
        </li>
        <% end %>
      </ul>
    </nav>
  </header>

  <body>
    <div class="row row-1">
      <div class="col-md-12">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
