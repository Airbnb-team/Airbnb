<div class="account-page ">
  <div class="account-page__inner">
    <h2>アカウント登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email,class: "original_css", autofocus: true, placeholder: "メールアドレス" %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password,class: "original_css", autocomplete: "off", placeholder: "パスワード(６文字以上)" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation,class: "original_css", autocomplete: "off", placeholder: "パスワードの確認" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up",class: "buttoncss_original" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    <!-- <%= link_to "Facebookで会員登録", user_facebook_omniauth_authorize_path %> -->
  </div>
</div>
