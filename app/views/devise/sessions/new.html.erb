<div class="log-in-page">
  <div class="log-in-page2">
    <h2>LOG IN</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true,class: "original_css1", placeholder:"Username" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off",class: "original_css1", placeholder:"Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in",class: "buttoncss_original1" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    <%= link_to "Facebookでログイン", user_facebook_omniauth_authorize_path %>
  </div>
</div>
